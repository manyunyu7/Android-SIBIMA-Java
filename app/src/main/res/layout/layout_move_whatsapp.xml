<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_change_password"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Anda Akan Dialihkan Menuju Chat Whatsapp dengan Teknisi SIBIMA" />
            <TextView
                android:layout_width="275dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Nama : " />
            <EditText
                android:id="@+id/tv_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:fontFamily="@font/montserrat_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:fontFamily="@font/montserrat_regular"
                android:text="Keluhan/Komplain :" />
            <EditText
                android:id="@+id/tv_new_password_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:fontFamily="@font/montserrat_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/blueAccent"
                android:text="Hal yang bisa dikeluhkan antara lain :
-Akun SIBIMA Bermasalah\n
-Bug Pada Aplikasi\n
-Dan Masalah Teknis Lainnya" />

            <Button
                android:id="@+id/btn_save_password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_button_green"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#fff"
                android:text="CHAT"/>
            <Button
                android:id="@+id/btn_cancel_password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_button_red"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#fff"
                android:text="Cancel"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>