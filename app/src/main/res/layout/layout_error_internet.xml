<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_error_internet"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:visibility="gone"
    android:background="#fff"

    android:gravity="center">


    <ImageView
        android:padding="20dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_logo_error"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Check Your Connection\n and Try Again Later"
        android:textColor="#00B0FF"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_regular"/>
    <Button
        android:id="@+id/btn_refresh_lyt_error_internet"
        android:layout_margin="20dp"
        android:background="@drawable/btn_rounded_button_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#fff"
        android:text="REFRESH"/>

</LinearLayout>